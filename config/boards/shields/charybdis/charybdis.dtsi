/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        pmw_split: pmw_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    pmw_listener: pmw_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&pmw_split>;
    };
};
